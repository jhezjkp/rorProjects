<div class="user_navigation">
  <% if user_signed_in? %>
    Hi,<%= current_user.email %>
    <%= image_tag current_user.gravatar_url %>
    <% if current_user.is_admin? %>
      admin
      <%= link_to('Admin Panel', admin_boards_path) %>
